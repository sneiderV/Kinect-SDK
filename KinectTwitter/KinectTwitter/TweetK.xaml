<UserControl x:Class="KinectTwitter.TweetK"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KinectTwitter"
      mc:Ignorable="d" Width="465" Height="349"
      >

    <Grid Background="White" Margin="25,0">
        <Ellipse HorizontalAlignment="Left" Height="60" Width="60" Margin="19,41,0,0" Stroke="Black" VerticalAlignment="Top" >
            <Ellipse.Fill>
                <ImageBrush ImageSource="Images/twitter_icon-icons.com_66093.png"/>
            </Ellipse.Fill>
        </Ellipse>
        <Label x:Name="userName" Content="Name of user" HorizontalAlignment="Left" Margin="84,56,0,0" VerticalAlignment="Top" FontFamily="Microsoft YaHei UI" FontWeight="Bold" FontSize="16"/>
        <Label x:Name="userId" Content="@User id" Margin="208,56,106,0" FontFamily="Microsoft YaHei UI" FontSize="16" Background="#00000000" Foreground="#FF818181" Height="30" VerticalAlignment="Top"/>
        <Label x:Name="date" Content="Date" Margin="314,56,23,0" FontFamily="Microsoft YaHei UI" FontSize="16" Foreground="#FF818181" Height="30" VerticalAlignment="Top"/>
        <TextBlock x:Name="contentTweet" HorizontalAlignment="Left" Margin="84,125,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="161" Width="308" FontFamily="Microsoft YaHei UI" FontSize="14"><Run Text="Content of the tweet "/><Run Text="..."/></TextBlock>
        <Rectangle HorizontalAlignment="Left" Height="24" Margin="95,286,0,0" Stroke="#00000000" VerticalAlignment="Top" Width="24">
            <Rectangle.Fill>
                <ImageBrush ImageSource="Images/message.png"/>
            </Rectangle.Fill>
        </Rectangle>
        <Rectangle HorizontalAlignment="Left" Height="24" Margin="190,286,0,0" VerticalAlignment="Top" Width="24">
            <Rectangle.Stroke>
                <ImageBrush/>
            </Rectangle.Stroke>
            <Rectangle.Fill>
                <ImageBrush ImageSource="Images/retweet.png"/>
            </Rectangle.Fill>
        </Rectangle>
        <Rectangle HorizontalAlignment="Left" Height="24" Margin="285,286,0,0" VerticalAlignment="Top" Width="24">
            <Rectangle.Fill>
                <ImageBrush ImageSource="Images/like.png"/>
            </Rectangle.Fill>
            <Rectangle.Stroke>
                <ImageBrush/>
            </Rectangle.Stroke>
        </Rectangle>

    </Grid>
</UserControl>
